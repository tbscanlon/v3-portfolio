---
import Container from "@components/Container.astro";
import TextLink from "@components/TextLink.astro";
import type { ProjectSummary } from "../lib/types";
import ProjectCard from "./ProjectCard.astro";

interface CallToAction {
  text: string;
  url: string;
}

interface Props {
  title: string;
  introduction: string;
  cta?: CallToAction;
  projects: ProjectSummary[];
}

const { title, introduction, cta, projects } = Astro.props;
---

<Container>
  <h2 class="text-2xl md:text-4xl font-bold mb-4">{title}</h2>
  <p class="mb-8 max-w-[90ch]">
    <span>{introduction}</span>
    {
      cta && (
        <>
          <TextLink as="a" href={cta.url} color="blue">
            {cta.text}
          </TextLink>
          .
        </>
      )
    }
  </p>
  <div class="grid gap-4 md:gap-8 grid-cols-1 sm:grid-cols-2 xl:grid-cols-3">
    {projects.map((project) => <ProjectCard {...project} />)}
  </div>
</Container>
