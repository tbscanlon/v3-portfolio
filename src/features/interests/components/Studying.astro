---
import type { HTMLAttributes } from "astro/types";
import interests from "../lib/interests.json";

interface Props extends HTMLAttributes<"div"> {
  class?: string;
}

const { class: className, ...attrs } = Astro.props;
---

<div
  class="p-4 md:p-6 bg-blue-light 2xl:bg-gradient-to-tr from-blue-light to-blue to-90% text-grey-2 rounded-lg flex flex-col justify-between items-start h-full min-h-[250px]"
  class:list={className}
  {...attrs}
>
  <h3 class="font-semibold text-xl md:text-2xl xl:text-4xl pb-4">
    I'm learning
  </h3>
  <p class="font-semibold">{interests.studying.title}</p>
  <p>{interests.studying.author}</p>
</div>
