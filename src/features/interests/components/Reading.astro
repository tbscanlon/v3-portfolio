---
import Box from "./Box.astro";
import interests from "../lib/interests.json";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Box
  type="reading"
  title={interests.reading.title}
  description={interests.reading.author}
  color="teal"
  href={interests.reading.url}
  class={className}
/>
