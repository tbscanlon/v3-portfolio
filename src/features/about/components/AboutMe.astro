---
import type { HTMLAttributes } from "astro/types";
import TextLink from "@components/TextLink.astro";

interface Props extends HTMLAttributes<"div"> {
  class?: string;
}

const { class: className, ...attrs } = Astro.props;
---

<div
  class="space-y-4 xl:space-y-8 flex flex-col justify-center max-w-prose"
  class:list={className}
  {...attrs}
>
  <p>
    I'm a web developer specialising in <span class="text-blue-light"
      >front-end development</span
    > using JavaScript.
  </p>
  <p>
    I enjoy using agile methodologies to build websites and web applications
    that are <span class="text-blue-light">performant</span>,

    <span class="text-blue-light">accessible</span> and <span
      class="text-blue-light">beautiful</span
    >.
  </p>
  <p>
    I'm passionate about building things with real value that make things
    <span class="text-blue-light">better</span> for people.
  </p>
  <TextLink as="a" href="/about" color="blue">Learn more about me</TextLink>
</div>
