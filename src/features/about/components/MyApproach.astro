---
import { getEntry } from "astro:content";
import AboutSection from "./AboutSection.astro";
import Facts from "./Facts.astro";

const approach = await getEntry("about", "approach");
const { Content } = await approach.render();
---

<AboutSection
  title={approach.data.title}
  color={approach.data.color}
  id="approach"
>
  <Content slot="content" />
  <Facts slot="aside" class="md:order-first" />
</AboutSection>
