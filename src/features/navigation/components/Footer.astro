---
import { Image } from "astro:assets";
import { links } from "../lib/links";
import SocialMedia from "@components/SocialMedia.astro";
import logo from "../images/logo.svg";
import FooterContactButton from "@features/contact/components/FooterContactButton.astro";
---

<footer class="relative bg-grey-1 px-4 md:px-6 xl:px-8 py-12 md:py-18 xl:py-24">
  <div
    class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-16"
  >
    <Image src={logo} alt="" quality="max" class="w-24 md:col-span-full" />
    <div>
      <p>Making the world a better place, one line of code at a time.</p>
      <SocialMedia class="mt-4" />
    </div>
    <div class="grid grid-cols-2 md:col-span-2 md:gap-16 mb-8 md:mb-0">
      <nav aria-label="Footer">
        <h2 class="mb-4 font-medium">Navigation</h2>
        <ul>
          {
            links.map((link) => (
              <li>
                <a
                  class="inline-block py-2 focus:bg-grey-4 rounded-lg duration-300"
                  class:list={{
                    "hover:text-blue-light": link.color === "blue",
                    "hover:text-green-light": link.color === "green",
                    "hover:text-yellow-light": link.color === "yellow",
                  }}
                  href={link.href}
                >
                  {link.text}
                </a>
              </li>
            ))
          }
          <li>
            <FooterContactButton />
          </li>
        </ul>
      </nav>
      <div>
        <h2 class="mb-4 font-medium">Where I am</h2>
        <p class="mb-4">I'm currently in:</p>
        <a
          class="px-3 py-1 bg-grey-2 rounded-full hover:bg-grey-4 focus:bg-grey-4 duration-300 border border-grey-11"
          href="https://www.google.com/maps/search/?api=1&query=perugia+italy"
          target="_blank"><span class="mr-2">ðŸ‡®ðŸ‡¹</span>Perugia</a
        >
      </div>
    </div>
    <div class="col-span-full border-t border-t-grey-3 text-sm pt-8">
      Â© {new Date().getFullYear()} Tom Scanlon. All rights reserved.
    </div>
  </div>
</footer>
